@using BudgetSquirrel.Frontend.Shared.Iconogrophy

<div class="app-loading-cover">
  <div class="app-loading-cover__content">
    <PageWideLogo ShouldBlink=true />

    @if (this.ChildContent != null)
    {
      <div class="app-loading-cover__custom-content">
        @this.ChildContent
      </div>
    }
  </div>
</div>

@code
{
  [Parameter]
  public RenderFragment? ChildContent { get; set; } = null;
}