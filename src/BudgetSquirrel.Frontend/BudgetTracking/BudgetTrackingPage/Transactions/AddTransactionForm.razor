@using BudgetSquirrel.Frontend.Shared
@using BudgetSquirrel.Frontend.Shared.Controls

<div>
  <CurrencyInput
    Value="@this.Amount"
    Placeholder="Amount (ex $34.67)"
    Name="amount"
    CssClass="form-input"
    OnChange="@this.ChangeAmount" />

  <DateInput
    Value="@this.DateOfTransaction"
    Placeholder="Transaction Date"
    Name="transactionDate"
    CssClass="form-input"
    OnChange="@this.ChangeDateOfTransaction" />

  <input
    value="@this.VendorName"
    placeholder="Vendor Name"
    name="vendorName"
    class="input form-input"
    @onchange="@((ChangeEventArgs __e) => this.ChangeVendorName(__e.Value!.ToString()!))" />

  <input
    value="@this.Description"
    placeholder="Description"
    name="description"
    class="input form-input"
    @onchange="@((ChangeEventArgs __e) => this.ChangeDescription(__e.Value!.ToString()!))" />

  <input
    value="@this.CheckNumber"
    placeholder="Check Number"
    name="checkNumber"
    class="input form-input"
    @onchange="@((ChangeEventArgs __e) => this.ChangeCheckNumber(__e.Value!.ToString()!))" />
</div>